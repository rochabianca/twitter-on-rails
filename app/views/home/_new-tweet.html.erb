<div class="new-tweet__header flex flex__content-space-between essential__shadow--dark">
  <h3>New Tweet</h3>
  <span class="new-tweet__quit" id="new-tweet__quit">Ã—</span>
</div>

<div class="space__major-top new-tweet__input">
  <div class="flex flex__align-center space__minor-bottom">
    <%= image_tag @rand_profile, :class => "account__pic new-tweet__pic"%>
    <div class="new-tweet__account">
      <h3><%= current_user.username %></h3>
      <h4>@<%= current_user.username %></h4>
    </div>
  </div>

  <%= simple_form_for(Tweet.new, remote: true) do |f| %>
    <%= f.input :content,as: :text, label: false, :error => false ,  placeholder: "What's happening?", input_html: {:rows => '5'},  autocomplete: "off"%>
    <div class="space__minor-top flex flex__content-space-between flex__align-center">
      <div class="new-tweet__caracters">
        <span class="caracteres"></span>
        Left
      </div>
      <button class="button button__tweet button__square" id="sendTweet" type="submit">Tweet</button>
    </div>
  <% end %>
</div>