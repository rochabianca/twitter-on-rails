<div class="grid__column grid__column--4">
  <div class="text__align-right space__minor-top">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), :class => "devise__links devise__top-links" %><br />
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), :class => "devise__links devise__top-links" %><br />
    <% end -%>
  </div>

  <div class=" devise__inputs">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :login, autofocus: true, autocomplete: "email", placeholder: "Email or username"  %>
      <%= f.input :password, autocomplete: "off", placeholder: "Your password" %>

      <div class="space__minor-top space__minor-bottom flex flex__align-center">
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, :class => "devise__remember-me" %>
        <% end -%>
      </div>
  
      <div class="space__minor-bottom">
        <%= f.submit "Log in", :class => 'button button__block button__secundary button__square'  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>