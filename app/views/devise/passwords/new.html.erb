<div class="grid__column grid__column--4 center bg--primary downpad space-to-center mobile-grid left-margin">

<h2 class="center-this">Forgot your password?</h2>

<hr class="line bottom-divider">

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email" %>

  <div class="actions top-divider bottom-divider">
    <%= f.submit "Send me reset password instructions", :class => "button button--block text--medium" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>