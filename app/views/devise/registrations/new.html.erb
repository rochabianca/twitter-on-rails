<div class="grid__column grid__column--3 center bg-white downpad space-to-center mobile-grid">

<h2 class="center-this">Sign up</h2>
<hr class="line bottom-divider">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= f.input :email, autofocus: true, autocomplete: "email" %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, autocomplete: "off" %>

  <div class="field space-field left-margin divider-top">
    <%= f.submit "Sign up", :class => 'btn btn--block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
